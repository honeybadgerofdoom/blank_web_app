{
  "$id": "https://example.com/address.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "game",
  "description": "game object for POST request",
  "type": "object",
  "properties": {
    "requestType": {
      "description": "the object type should be game",
      "type": "string",
      "pattern": "^game$"
    },
    "userID": {
      "description": "a username.",
      "type": "number"
    },
    "type": {
      "description": "type of games to return",
      "type": "string",
      "enum": ["ALL", "ACTIVE", "PENDING"]
    }
  },
  "required": ["requestType", "userID"],
  "additionalProperties": true
}
