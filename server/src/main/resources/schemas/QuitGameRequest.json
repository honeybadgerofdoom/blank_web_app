    "type": "object",
    "properties": {
      "requestType": {
        "description": "the object type should be quitGame",
        "type": "string",
        "pattern": "^quitGame$"
      },
      "userID": {
        "description":"current user that is playing",
        "type":"number"
      },
      "gameID": {
        "description":"a game ID.",
