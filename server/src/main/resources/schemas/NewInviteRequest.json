{
  "$id": "https://example.com/address.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "newInvite",
  "description": "newInvite object for POST request",
  "type": "object",
  "properties": {
    "requestType": {
      "description": "the object type should be myInvites",
      "type": "string",
      "pattern": "^newInvite$"
    },
    "userID": {
      "description":"a user ID.",
      "type":"number"
    },
    "opponentIDs":{
      "description": "a list of user IDs to invite",
      "type":"array",
      "items": {
        "type":"integer",
        "minimum": 0
      },
      "minItems": 1
    },
    "gameID": {
      "description":"a game ID.",
      "type":"number"
    }
  },
  "required":["requestType", "userID","opponentIDs","gameID"],
  "additionalProperties": true
}
