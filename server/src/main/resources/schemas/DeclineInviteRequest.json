{
  "$id": "https://example.com/address.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "declineInvite",
  "description": "declineInvite object for POST request",
  "type": "object",
  "properties": {
    "requestType": {
      "description": "the object type should be myInvites",
      "type": "string",
      "pattern": "^declineInvite$"
    },
    "sender": {
      "description":"a username",
      "type":"string"
    },
    "receiver": {
      "description":"a user ID.",
      "type":"number"
    },
    "gameID": {
      "description":"a game ID.",
      "type":"number"
    }
  },
  "required":["requestType", "sender","receiver","gameID"],
  "additionalProperties": true
}
