{
  "$id": "https://example.com/address.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "move",
  "description": "move request",
  "type": "object",
  "properties": {
    "requestType": {
      "description": "the TIP object type should be locations",
      "type": "string",
      "pattern": "^move$"
    },
    "fromPosition": {
      "description": "position on board moved from",
      "type": "string"
    },
    "toPosition": {
      "description": "position on board moved from",
      "type": "string"
    },
    "userID" : {
      "description": "a user's id",
      "type": "number"
    },
    "gameID" : {
      "description": "a game ID",
      "type": "number"
    }
  },
  "required": ["requestType","fromPosition","toPosition","userID", "gameID"],
  "additionalProperties": false
}
