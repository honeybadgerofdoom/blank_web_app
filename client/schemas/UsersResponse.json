{
  "$id": "https://example.com/address.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "users",
  "description": "users object for POST response",
  "type": "object",
  "properties": {
    "requestType": {
      "description": "the object type should be users",
      "type": "string",
      "pattern": "^users$"
    },
    "match": {
      "description": "an username pattern to match",
      "type": "string",
      "pattern": "^[a-zA-Z0-9_ ]+$"
    },
    "excludeID": {
      "description": "an userID to exclude from the results",
      "type": "integer",
      "minimum": 0
    },
    "limit": {
      "description": "the max number of users to return",
      "type": "integer",
      "minimum": 0
    },
    "found": {
      "description": "the total number of matching users",
      "type": "integer",
      "minimum": 0
    },
    "users": {
      "description": "a list of users",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "userID": {
            "type": "integer"
          },
          "username": {
            "type":"string",
            "pattern": "^[a-zA-Z0-9_ ]+$"
          }
        },
        "required": ["userID", "username"],
        "additionalProperties": true
      },
      "minitems": 0
  }
},
  "required": ["requestType", "match", "limit", "users"],
  "additionalProperties": false
}
