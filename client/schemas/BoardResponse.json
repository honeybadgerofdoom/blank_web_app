{
  "$id": "https://example.com/address.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "board",
  "description": "board request/response",
  "type": "object",
  "properties": {
    "requestType": {
      "description":"the TIP object type should be locations",
      "type":"string",
      "pattern":"^board$"
    },
    "boardString": {
      "description": "an array of piece strings",
      "type":"array",
      "items": {
        "type": "object",
        "properties": {
          "position": {
            "type": "string",
            "pattern": "(.*?)"
          }
        }
      }
    }
  },
  "required":["requestType","boardString"],
  "additionalProperties": false
}
